            android:name=".layoutAnimation.LayoutAnimationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".layoutAnimation.AnimateLayoutChangesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".drawapi.DrawDemoActivity"
