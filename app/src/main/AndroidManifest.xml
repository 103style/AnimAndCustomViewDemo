        <activity
            android:name=".practice.PracticeDemoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".practice.burningrabbit.BurningRabbitActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".practice.path.PathLayoutManagerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".practice.qqzone.QQZoneActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

    </application>

</manifest>